@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.SaveConversationsViewModel

@using (Ajax.BeginForm("ValidateAndSaveSaveConversationsAsync", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSaveSuccess", OnFailure = "onSaveFailure" }, htmlAttributes: new { @class = "formToSubmit" }))
{
    <div class="form-group" data-form-name="saveConversations">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.SaveConversations, htmlAttributes: new { @class = "font-bold" })
            <span class="mandatoryField">*</span>
        </div>
        <div class="col-lg-5">
            @Html.TextBoxFor(model => model.SaveConversations, htmlAttributes: new { @class = "form-control saveConversationsTextBox toggleTextBox", @placeholder = "Enter save conversations value." })
            @Html.ValidationMessageFor(model => model.SaveConversations, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1">
            <span id="saveConversationsStorageStatusIcon"></span>
        </div>
        <div class="col-lg-3">
            <input type="button" value="OK" class="btn btn-primary toggleToEditButton" id="saveConversationsSubmitButton" />
            <span class="glyphicon glyphicon-info-sign infoSignMargin" data-toggle="tooltip" title="@Strings.SaveConversationsToolTipHoverMessage"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="saveConversationsStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}